                              </children>
                           </HBox>
                           <HBox alignment="CENTER" spacing="25.0" GridPane.columnIndex="4" GridPane.rowIndex="8" GridPane.columnSpan="1" GridPane.halignment="RIGHT">
                              <children>
                                 <JFXButton onAction="#setDefaultAdminEmailAction" prefWidth="150" text="使用默认管理邮箱" />
                                 <JFXButton onAction="#handleSaveButtonAction" prefWidth="150" text="保存邮箱设置" />
                              </children>
                           </HBox>
                           <padding>
                              <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                           </padding>
                        </GridPane>
                     </children>
                  </AnchorPane>

         </content>
