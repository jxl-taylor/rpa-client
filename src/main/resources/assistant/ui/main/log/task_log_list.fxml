<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" stylesheets="@/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mr.rpa.assistant.ui.main.log.TaskLogListController">
    <children>
        <TableView fx:id="tableView" layoutX="14.0" layoutY="14.0" maxHeight="150.0" prefWidth="10000.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="15.0">
            <columns>
                <TableColumn fx:id="idCol" text="编号"/>
                <TableColumn fx:id="statusCol" text="状态"/>
                <TableColumn fx:id="startTime" minWidth="150" text="开始时间"/>
                <TableColumn fx:id="endTime" minWidth="150" text="结束时间"/>
                <TableColumn visible="false" fx:id="errorCol" prefWidth="75.0" text="错误信息"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="刷新"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleTaskDetailOption" text="详情"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleTaskDeleteOption" text="删除"/>
                    </items>
                    <styleClass>
                        <String fx:value="table-context"/>
                        <String fx:value="colored-context-menu"/>
                    </styleClass>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </children>
</AnchorPane>
