<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXButton?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<SplitPane fx:id="taskSplit" orientation="VERTICAL" dividerPositions="0.6" stylesheets="@/dark-theme.css"
           xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mr.rpa.assistant.ui.main.task.TaskBeanController">
    <items>
        <BorderPane layoutX="251.0" layoutY="71.0" prefHeight="412.0" prefWidth="557.0">
            <top>
                <HBox alignment="TOP_LEFT" spacing="5" BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER_LEFT" prefWidth="400.0">
                            <children>
                                <Label text="BOT任务管理"/>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_RIGHT" prefWidth="450.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="0">
                                    <children>
                                        <JFXTextField fx:id="taskName" labelFloat="true" maxWidth="224.0" minWidth="224.0" onAction="#loadTaskInfo" prefHeight="32.0" prefWidth="274.0" promptText="BOT名称"/>
                                        <JFXButton onAction="#loadTaskInfo" prefHeight="32.0" prefWidth="50.0" text="查询" />
                                        <JFXButton onAction="#clearSearch" prefHeight="32.0" prefWidth="50.0" text="清空" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <JFXButton onAction="#loadAddTask" prefHeight="32.0" prefWidth="90.0" text="＋新建任务"/>
                            </children>
                        </VBox>
                    </children>
                    <BorderPane.margin>
                        <Insets top="20.0" left="15.0" right="15"/>
                    </BorderPane.margin>
                </HBox>
            </top>
            <bottom>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                    </children>
                </HBox>
            </bottom>
            <center>
                <HBox fx:id="taskDataContainer" alignment="CENTER" prefHeight="10000.0" prefWidth="10000.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="TOP_CENTER">
                            <children>
                                <fx:include source="/assistant/ui/listtask/task_list.fxml"/>
                            </children>
                        </VBox>
                    </children>
                    <BorderPane.margin>
                        <Insets top="5.0"/>
                    </BorderPane.margin>
                </HBox>
            </center>
        </BorderPane>
        <AnchorPane>
            <children>
                <SplitPane dividerPositions="0.6" minHeight="80" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        <AnchorPane>
                            <children>
                                <fx:include source="/assistant/ui/main/log/history.fxml" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane>
                            <children>
                                <fx:include source="/assistant/ui/main/log/small_log.fxml" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </items>
</SplitPane>
