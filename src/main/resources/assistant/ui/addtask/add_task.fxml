<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.ScrollPane?>
<StackPane fx:id="rootPane" stylesheets="@/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mr.rpa.assistant.ui.addtask.TaskAddController">
   <children>
      <ScrollPane vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" prefHeight="668" prefWidth="464" maxHeight="668" style="-fx-border-color: -fx-primary; -fx-background-color: -fx-primary;">
         <content>
            <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="668.0" prefWidth="464.0" styleClass="custom-pane" stylesheets="@/dark-theme.css">
               <children>
                  <VBox fx:id="vFormBox" prefHeight="256.0" maxHeight="800" prefWidth="404.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <JFXTextField fx:id="id" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="BOT编号">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </JFXTextField>
                        <HBox fx:id="kjbName" spacing="5" maxHeight="50" VBox.vgrow="ALWAYS">
                           <children>
                              <JFXTextField fx:id="name" labelFloat="true" promptText="BOT名称" HBox.hgrow="ALWAYS" editable="false">
                              </JFXTextField>
                              <JFXButton fx:id="uploadFileButton" prefWidth="100.0" text="上传文件"/>
                              <JFXButton fx:id="uploadDirButton" prefWidth="100.0" text="上传文件夹"/>
                           </children>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </HBox>

                        <JFXComboBox fx:id="mainTask" labelFloat="true" promptText="上级BOT">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </JFXComboBox>

                        <HBox spacing="5" maxHeight="50" VBox.vgrow="ALWAYS">
                           <children>
                              <JFXTextField fx:id="cron" labelFloat="true" promptText="调度策略(cron)" HBox.hgrow="ALWAYS">
                              </JFXTextField>
                              <JFXButton prefWidth="100.0" text="配置" onAction="#setCron"/>
                           </children>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </HBox>

                        <JFXTextArea fx:id="desp" maxHeight="100" labelFloat="true" style="-fx-text-fill: -fx-secondary" promptText="描述">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </JFXTextArea>

                        <JFXComboBox fx:id="nextTask" labelFloat="true" promptText="依赖BOT">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </JFXComboBox>

                        <HBox VBox.vgrow="ALWAYS" spacing="5" alignment="CENTER_RIGHT">
                           <children>
                              <JFXButton prefWidth="100.0" onAction="#addParam" text="添加参数"/>
                           </children>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </HBox>

                        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                           <children>
                              <JFXButton onAction="#addTask" prefHeight="66.0" prefWidth="100.0" text="保存" />
                              <JFXButton layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="66.0" prefWidth="100.0" text="取消" />
                           </children>
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="20.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
      </children>
</StackPane>
